{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "allowJs": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
